#!/usr/bin/env ruby
require "linear"
include Linear
equation = proc do |index
	case ARGV[index]
		when "slope-intercept" then SlopeIntercept.find index + 1
		when "standard" then Standard.find index + 1
		when "function" then case ARGV.length
			when index then Function.new
			when index + 2 then Function.new ARGV[index + 1].to_f
			when index + 3 then Function.new ARGV[index + 1].to_f, ARGV[index + 2].to_f
		end
		when "point-slope" then PointSlope.find index + 1
	end
end
puts case ARGV[0]
	when "graph" then Graph.new equation.call 1
	when "display" then equation.call 1
	when "execute" then equation.call(2).execute ARGV[1].to_f
	when "help" then "Help is not available. Please refer to the README."
end
