#!/usr/bin/env ruby
require "linear1"
include Linear1
equation = ->(i) do begin
	e = EQUATIONS[ARGV[i].to_sym]
	e.find i + 1
	
	rescue NoMethodError
	e.build
end end
	
	
	
puts case ARGV[0]
	when "graph" then Graph.new equation.call(1)
	when "display" then case ARGV[1]
		when "slope" then equation.call(2).send(:slope)
		when "y_intercept" then equation.call(2).send(:y_intercept)
		when "help", Regexp.new("-h") then "TODO"
	else equation.call 1
	end
	when "execute" then equation.call(2).execute ARGV[1]
	when "help" then "TODO"
end
